<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


        <Spinner
            android:paddingTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerserviceprovider"
            android:entries="@array/serviceprovider"
            android:prompt="@string/smsprovider"
            android:spinnerMode="dialog"
            android:textAlignment="center"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <TextView
        android:paddingTop="15dp"
        android:paddingLeft="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/bundletxt"
        android:id="@+id/textviewbundle"
        android:textSize="17dp"
        android:layout_below="@+id/spinnerserviceprovider"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerdataoption"
        android:layout_below="@+id/textviewbundle"
        android:entries="@array/servicebundle"
        android:prompt="@string/smsbundle"
        android:spinnerMode="dialog"
        android:textAlignment="center"
        >


    </Spinner>

</RelativeLayout>
